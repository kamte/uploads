{
	"name": "polymer-ide",
	"displayName": "Polymer IDE",
	"description": "Provides linting, autocompletion, and more for web components.",
	"author": "Polymer Authors",
	"license": "MIT",
	"version": "0.4.0",
	"icon": "polymer.png",
	"publisher": "polymer",
	"engines": {
		"vscode": "^1.6.0"
	},
	"categories": [],
	"repository": {
		"type": "git",
		"url": "https://github.com/Polymer/vscode-plugin"
	},
	"activationEvents": [
		"onLanguage:html",
		"onLanguage:javascript",
		"onLanguage:plaintext"
	],
	"main": "./out/src/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Polymer Plugin Configuration",
			"properties": {}
		},
		"jsonValidation": [
			{
				"fileMatch": "polymer.json",
				"url": "./node_modules/polymer-project-config/lib/schema.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "tsc -p ./",
		"compile": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install"
	},
	"devDependencies": {
		"typescript": "^2.1.4",
		"vscode": "^1.0.0",
		"@types/node": "^6.0.40",
		"@types/mocha": "^2.2.32"
	},
	"dependencies": {
		"polymer-editor-service": "^1.3.0",
		"polymer-project-config": "^2.0.0",
		"vscode-languageclient": "^3"
	},
	"__metadata": {
		"id": "4e588498-0bd7-46f0-8ac5-4630d71eb256",
		"publisherId": "e44c3a6d-0f33-4a45-8f73-0347a374505d",
		"publisherDisplayName": "polymer"
	}
}